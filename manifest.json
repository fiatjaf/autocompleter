{
  "manifest_version": 2,
  "name": "Autocompleter",
  "description": "Autocomplete every textarea.",
  "version": "0.0.1",
  "author": "Giovanni T. Parra",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "all_frames": true,
    "js": ["vendor/jquery.js", "vendor/jquery.textcomplete.js", "dist/full.js"],
    "css": ["style.css"]
  }],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage"
  ]
}
